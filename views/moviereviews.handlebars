<section id="movie-data" class="movie-data">
    <section id="review-results" class="review-results">
        <h1 class="movie-title-class">{{reviewData.title}}</h1>
        <img src="https://image.tmdb.org/t/p/w200{{reviewData.poster_path}}">
        <p>{{format_date reviewData.release_date}}</p>
        <div class="summary">
            <h4 class="movie-summary-header">Summary</h4>
            <p class="movie-summary-description">{{reviewData.overview}}</p>
        </div>
    </section>
</section>



<section id="user-review-sliders" class="user-review-sliders">
    {{!-- two sliders to review movies --}}
    {{#if loggedIn}}
    <label for="quality_review_integer" class="form-label">How good was the movie?</label>
    <input type="range" class="form-range" min="0" max="10" id="quality_review_integer" list="quality-values">
    <datalist id="quality-values" style="font-size: 24pt;">
        <option value="0" label="The Worst"></option>
        <option value="1"></option>
        <option value="2"></option>
        <option value="3"></option>
        <option value="4"></option>
        <option value="5" label="meh"></option>
        <option value="6"></option>
        <option value="7"></option>
        <option value="8"></option>
        <option value="9"></option>
        <option value="10" label="The Best!"></option>
    </datalist>
    </br>
    </br>
    <label for="fun_review_integer" class="form-label">How fun was the movie?</label>
    <input type="range" class="form-range" min="0" max="10" id="fun_review_integer" list="fun-values">
    <datalist id="fun-values" style="font-size: 24pt;">
        <option value="0" label="Boring"></option>
        <option value="1"></option>
        <option value="2"></option>
        <option value="3"></option>
        <option value="4"></option>
        <option value="5" label="It's a movie"></option>
        <option value="6"></option>
        <option value="7"></option>
        <option value="8"></option>
        <option value="9"></option>
        <option value="10" label="Exciting!"></option>
    </datalist>
    {{else}}
    <h2>You may only post a review if logged in</h2>
    {{/if}}
</section>


<section>
    <h3>{{reviews.review_string}}</h3>
</section>
<form id="reviewForm">
    {{#if loggedIn}}
    <label for="movieComments">
        Review:
    </label>
    <br />
    <textarea id="movieComments" name="review" rows="5" cols="30" class="textarea"></textarea>
    <button id="reviewBtn" type="submit" value="Submit">Post</button>
    {{else}}
    <p></p>
    {{/if}}
</form>



<script src="/js/reviews.js"></script>