<section id="review-results">
    <h1>{{reviewData.title}}</h1>
    <img src="https://image.tmdb.org/t/p/w200{{reviewData.poster_path}}">
    
</section>
<section>
    <h3>{{reviews.review_string}}</h3>
</section>
<form id="reviewForm">
    <label for="movieComments">
        Review:
    </label>
    <br />
    <textarea id="movieComments" name="review" rows="5" cols="30"
        style="width:96%;height:150px;padding:2%;font-size:1.2em;background:url('https://gallery.yopriceville.com/var/resizes/Backgrounds/Cinema_Background.jpg?m=1399672800');background-position:center center;background-repeat:no-repeat;">
      {{review_string}}
    </textarea>
    <button id="reviewBtn" type="submit" value="Submit">Post</button>
</form>



<script src="/js/reviews.js"></script>